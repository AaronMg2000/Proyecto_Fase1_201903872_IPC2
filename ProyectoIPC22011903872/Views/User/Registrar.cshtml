@model ProyectoIPC22011903872.Models.ViewModels.addUserViewModel

@{
    ViewBag.Title = "Registrar";
}

@section imagen{
    '/Public/IMG/Fondo2.jpg'
}
@using (Html.BeginForm("Registrar", "User", FormMethod.Post))
{
    
    <div class="row align-content-center justify-content-center" style="height:95vh">
        <div class="col col-md-4">
            <div class="card font-weight-bold">
                <div class="card-header bg-secondary text-white text-center">
                    Formulario de Registro
                </div>
                <div class="card-body">
                    @Html.LabelFor(d => d.Nombre, "Nombre")
                    @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
                    @Html.LabelFor(d => d.Apellido, "Apellido")
                    @Html.TextBoxFor(d => d.Apellido, "", new { @class = "form-control" })
                    @Html.LabelFor(d => d.Usuario, "Usuario")
                    @Html.TextBoxFor(d => d.Usuario, "", new { @class = "form-control" })
                    @Html.LabelFor(d => d.Correo_Electronico, "Correo_Electronico")
                    @Html.TextBoxFor(d => d.Correo_Electronico, "", new { @class = "form-control" , @type="email"})
                    @Html.LabelFor(d => d.Password, "Contraseña")
                    @Html.TextBoxFor(d => d.Password, "", new { @class = "form-control", @type = "password" })
                    @Html.LabelFor(d => d.RePassword, "Confirmar Contreseña")
                    @Html.TextBoxFor(d => d.RePassword, "", new { @class = "form-control", @type = "password" })
                    @Html.LabelFor(d => d.Fecha_nacimiento, "Fecha de Nacimiento")
                    @Html.TextBoxFor(d => d.Fecha_nacimiento, "", new { @class = "form-control", @type = "date" })
                    @Html.LabelFor(d => d.Codigo_Pais, "Pais")
                    <select class="form-control" data-val="true" data-val-number="El campo Codigo_Pais debe ser un número." data-val-required="El campo Codigo_Pais es obligatorio." id="Codigo_Pais" name="Codigo_Pais">
                        <option value="">Seleccione uno</option>
                        @foreach (var pais in ViewBag.Paises)
                        {
                            <option value="@pais.codigo">@pais.nombre | @pais.ISO3</option>
                        }
                    </select>
                    <div class="row mt-2">
                        <div class="col col-md-6">
                            <input type="submit" value="Agregar" class="btn btn-block btt-yellow redondear" />
                        </div>
                        <div class="col col-md-6">
                            @Html.ActionLink("Cancelar", "Login", "User", new { @class = "btn btn-dark btn-block redondear" })
                        </div>
                        
                    </div>
                </div>
                    
            </div>
        </div>
    </div>
}


