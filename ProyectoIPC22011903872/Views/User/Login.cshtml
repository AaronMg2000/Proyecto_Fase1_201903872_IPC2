
@{
    ViewBag.Title = "Login";
}

@section imagen{
    '/Public/IMG/Fondo1.jpg'
}

<div class="row justify-content-center align-items-end" style="height:82vh">
    <div class="col col-md-4">
        <div class="card bg-transparent redondear">
            <div class="card-body bg-celeste-75 redondear">
                <form action="/" method="post">
                    <div class="form-group text-white">
                        <input type="text" name="nombre" placeholder="Usuario" class="form-control" />
                    </div>
                    <div class="form-group text-white">
                        <input type="text" name="password" placeholder="Contraseña" class="form-control" />
                    </div>
                    <div class="form-group text-white">
                        <div class="row">
                            <div class="col-12">
                                <a href="#" class="btn btt-yellow btn-block redondear mb-2">INGRESAR</a>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-12">
                                <a href="#" class="btn btn-dark btn-block redondear">REGISTRARSE</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

